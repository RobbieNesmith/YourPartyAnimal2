generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  songs Song[]
  promotion_enabled Boolean @default(true)
  promotion_value Int @default(5)
  removal_enabled Boolean @default(true)
  removal_value Int @default(-10)
  rate_limit Int @default(1)
  stop_requests Boolean @default(false)
  provider_key String @unique
  approved Boolean @default(false)
  @@map("users")
}

model Song {
  id Int @id @default(autoincrement())
  user_id Int
  user User @relation(fields: [user_id], references: [id])
  video_id String
  name String
  rating Int
  requested_at DateTime
  played_at DateTime?
  preset Boolean @default(false)
  requested_by String?
  @@map("songs")
}